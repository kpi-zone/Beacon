# ---------------------
# PostgreSQL Configuration
# ---------------------

# Username for Superset's internal PostgreSQL metadata database
POSTGRES_USER=superset

# Password for the PostgreSQL user
POSTGRES_PASSWORD=superset

# Name of the database that Superset will use for storing metadata
POSTGRES_DB=superset

# ---------------------
# Superset Application Settings
# ---------------------

# Secret key used by Flask for session signing, CSRF protection, etc.
# ‚ö†Ô∏è Replace with a secure, randomly generated value in production
SECRET_KEY=dev-secret-abc1234567890xyzXYZ

# SQLAlchemy connection string to Superset's metadata database
# Format: dialect+driver://username:password@host:port/database
DATABASE_URL=postgresql+psycopg2://superset:superset@db:5432/superset
