# ------------------------------
# Metabase Configuration
# ------------------------------

# The type of database Metabase will use to store its internal metadata
# Supported types: 'postgres', 'mysql', 'h2' (not recommended)
MB_DB_TYPE=postgres

# The name of the database Metabase should connect to
MB_DB_DBNAME=metabase

# The port number of the database server
MB_DB_PORT=5432

# The username Metabase will use to authenticate with the database
MB_DB_USER=user

# The password associated with the above username
MB_DB_PASS=password

# The hostname or Docker service name where the database server is reachable
MB_DB_HOST=metabase-db

# ------------------------------
# Postgres Database Configuration
# ------------------------------

# The name of the initial database to create inside the Postgres container
POSTGRES_DB=metabase

# The default user to be created in the Postgres instance
POSTGRES_USER=user

# The password for the default Postgres user
POSTGRES_PASSWORD=password
